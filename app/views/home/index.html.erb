<div id="hidden-game-div">
</div>


<input type="submit" class="start" value="Let's Play!" title="start" />
<br>
<span style="inline" id="buttons">
<input type="submit" class="submit-word" value="Submit Word" title="submit-word" />
<input type="submit" class="undo" value="Undo" title="undo" />
</span>
<br>
<br>

<div id="instruction-modal">
    <div class="close-modal">
      <span class="close-instruction-modal">X</span>
    </div>

    <div>
      <div class="modal-info">
        <h2>How to play:</h2>
        <h4> You have 3 MINUTES! </h4>
        <p>Build a word >= 3 letters.</p>
        <ul>
        <p>
            3 letters = 2 points<br>
            4 letters = 4 points<br>
            5 letters = 6 points<br>
            6 letters = 8 points<br>
            7+ letters = 10 points<br>
        </p>
        </ul>
      </div>
    </div>
</div>

<div id="game-over-modal">
    <div class="close-game-modal">
      <span class="close-game-modal">X</span>
    </div>
    <div>
      <div class="modal-info">
        <h2>TIME'S UP! GAME OVER!</h2>
        <h4 class='final-score'></h4>
        <input type="submit" class="new-game" value="Play again?" />
      </div>
    </div>
</div>



<div class="wrapper1">
	<div class="container-fluid">

		<div class="row-fluid" id="text-wrapper">
			<div class="span2" id="timer">
			<p class="timer"></p>
			</div>

			<div class="row-fluid">
				<div class="span2" id="score-wrapper">
				Score:
				<p class="game-score">0</p>
				</div>

				<div class="row-fluid">
					<div class="span2" id="build-wrapper">
					<p >Word Build: </p>
					<p class="word-build"></p>
					</div>

					<div class="row-fluid">
						<div class="span2" id="word-list-wrapper">
						<p>Accepted Words:</p>
						<p class='accepted-words'></p>
						</div>

					</div>
				</div>
			</div>
		</div>

	</div>
</div>

<div class="wrapper2">
<div class="boggle-board" id="fix"></div>
</div>

