<%= form_tag sessions_path do %>
	<div class="username">
	  <%= label_tag :username, "Username: " %>
	  <%= text_field_tag :username %>
	</div>
	<div class="password">
	  <%= label_tag :password, "Password:    " %>
	  <%= password_field_tag :password %>
	</div>

  <%= submit_tag 'Submit', :id=>"submit", :class => "btn btn-default" %>
  
<% end %>